<h1>All Articles</h1>

<ul id="articles">
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article), class: "article_title", id: "article_#{article.id}" %>
    </li>
  <% end %>
</ul>

<%= link_to "Creat a New Article", new_article_path, class: "new_article" %>
<br /><p><%= link_to "Tags List", tags_path, id: "tags" %></p>
